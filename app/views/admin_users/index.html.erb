<% @page_title = "Manage Users" %>
<div class="center page-header">
  <h2>Manage Users</h2>
  <%= pluralize(@admin_users.size, 'user') %> found
  <div class="center">
    <%= link_to("Add User", new_admin_user_path, :class => 'btn btn-primary') %>
  </div>
</div>
<div>
  <table class="table table-bordered table-striped table-hover table-condensed">
    <tr>
      <th>Year</th>
      <th>Section</th>
      <th>Roll number</th>
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
        <tr>
          <td><%= admin_user.year %></td>
          <td><%= admin_user.section %></td>
          <td><%= admin_user.roll_number %></td>
          <td><%= admin_user.name %></td>
          <td><%= mail_to(admin_user.email) %></td>
          <td><%= admin_user.username %></td>
          <td><%= admin_user.superuser ? 'Yes' : 'No' %></td>
          <td>
            <%= link_to('Scorecard', admin_user_path(admin_user), :class => 'btn btn-primary btn-sm') %>
            <%= link_to('Edit', edit_admin_user_path(admin_user), :class => 'btn btn-info btn-sm') %>
            <%= link_to('Delete', delete_admin_user_path(admin_user), :class => 'btn btn-danger btn-sm') %>
          </td>
        </tr>
    <% end %>
  </table>
</div>
